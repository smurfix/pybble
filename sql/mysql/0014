try:
	Do("""ALTER TABLE bindata
    	ADD COLUMN `size` int(11) NOT NULL""")
except Exception:
	pass

from pybble.models import BinData
from pybble.database import db,database
from storm.locals import Store
db.store=Store(database)
for b in db.store.find(BinData, BinData.superparent_id != None):
	b.size = len(b.content)
db.store.commit()
